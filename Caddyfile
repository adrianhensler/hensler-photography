# Production Caddyfile - serves all 3 domains on standard ports

# Management interface on port 4100 with SSL
adrian.hensler.photography:4100 {
  reverse_proxy api:8000
}

liam.hensler.photography:4100 {
  reverse_proxy api:8000
}

hensler.photography {
  encode zstd gzip

  # Proxy API requests to backend (for analytics tracking)
  handle /api/* {
    reverse_proxy api:8000
  }

  # Gallery assets (uploaded images from database)
  handle /assets/gallery/* {
    reverse_proxy api:8000
  }

  handle /healthz {
    respond "ok" 200
  }

  # Serve static site files
  handle {
    root * /srv/sites/main
    file_server
  }

  header {
    Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
    X-Content-Type-Options "nosniff"
    X-Frame-Options "DENY"
    Referrer-Policy "strict-origin-when-cross-origin"
  }
}

liam.hensler.photography {
  encode zstd gzip

  # Management interface (admin/photographer)
  handle /manage* {
    reverse_proxy api:8000
  }

  handle /admin* {
    reverse_proxy api:8000
  }

  # Static files for management UI
  handle /static/* {
    reverse_proxy api:8000
  }

  # Proxy API requests to backend (for analytics tracking)
  handle /api/* {
    reverse_proxy api:8000
  }

  # Gallery assets (uploaded images from database)
  handle /assets/gallery/* {
    reverse_proxy api:8000
  }

  handle /healthz {
    respond "ok" 200
  }

  # Serve static site files
  handle {
    root * /srv/sites/liam
    file_server
  }

  header {
    Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
    X-Content-Type-Options "nosniff"
    X-Frame-Options "DENY"
    Referrer-Policy "strict-origin-when-cross-origin"
  }
}

adrian.hensler.photography {
  encode zstd gzip

  # Management interface (admin/photographer)
  handle /manage* {
    reverse_proxy api:8000
  }

  handle /admin* {
    reverse_proxy api:8000
  }

  # Static files for management UI
  handle /static/* {
    reverse_proxy api:8000
  }

  # Proxy API requests to backend (for analytics tracking)
  handle /api/* {
    reverse_proxy api:8000
  }

  # Gallery assets (uploaded images from database)
  handle /assets/gallery/* {
    reverse_proxy api:8000
  }

  handle /healthz {
    respond "ok" 200
  }

  # Serve static site files
  handle {
    root * /srv/sites/adrian
    file_server
  }

  header {
    Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
    X-Content-Type-Options "nosniff"
    X-Frame-Options "DENY"
    Referrer-Policy "strict-origin-when-cross-origin"
  }
}

gptresearcher.hensler.photography:4001 {
  encode zstd gzip

  # Serve outputs (PDFs, reports) as static files
  @outputs path /outputs/*
  handle @outputs {
    root * /srv/gptresearcher
    file_server browse
  }

  # Route API and WebSocket requests to backend
  @backend path /api/* /ws /report/* /files/* /upload/* /chat /docs /openapi.json
  reverse_proxy @backend gpt-researcher-gpt-researcher-1:8000

  # Route everything else to frontend
  reverse_proxy gpt-researcher-gptr-nextjs-1:3000

  header {
    Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
    X-Content-Type-Options "nosniff"
    X-Frame-Options "SAMEORIGIN"
    Referrer-Policy "strict-origin-when-cross-origin"
  }

  @health path /healthz
  respond @health "ok" 200
}
