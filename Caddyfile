# Production Caddyfile - serves all 3 domains on standard ports

hensler.photography {
  encode zstd gzip

  # Proxy API requests to backend (for analytics tracking)
  handle /api/* {
    reverse_proxy api:8000
  }

  # Gallery assets (uploaded images from database)
  handle /assets/gallery/* {
    reverse_proxy api:8000
  }

  handle /healthz {
    respond "ok" 200
  }

  # Serve static site files
  handle {
    root * /srv/sites/main
    file_server
  }

  header {
    Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
    X-Content-Type-Options "nosniff"
    X-Frame-Options "DENY"
    Referrer-Policy "strict-origin-when-cross-origin"
  }
}

